<section class="auth">
    <div class="container">
        <div class="images">
        </div>
        <div class="formBox">
            <% if(messages.error){ %>
                <span id="errorMessage" class="text-red-600 text-base"><%= messages.error %></span>
            <% } %>
            <form  formaction="/login" method="POST" autocomplete="off">
                <h2>Sign In</h2>
                <div class="inputBox">
                    <label>Email</label>
                    <input type="text" name="email" placeholder="wayne@gmail.com">
                </div>
                <div class="inputBox active">
                    <label>Password</label>
                    <input type="password" name="password" id="password">
                    <div id="toggle" onclick="showHide();"></div>
                    <p class="text-right"><a href="/forgotPassword">Forgot Password ?</a></p>
                </div>
                <button type="submit" class="btn-style">Sign In <span>></span></button>
            </form>
            <p>Don't have an Account? <a href="/register">Sign Up</a></p>
            
        </div>
    </div>

</section>